
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-10">
      <h5>
        Welcome, <strong><%=current_user.name %></strong> to <%= first_domain %> Central Authentication
      </h5>
    </div>
    <div class="col-sm-2">
      <div class="g-signin2" data-onsuccess="onSignIn" data-width="0" data-height="0" data-longtitle="false"></div>
        <p class="text-right">
        <%= link_to('Samson', ENV['SAMSON_LINK'], class: 'btn btn-sm btn-success') if ENV['SAMSON_LINK'] %>
        <%= link_to('Logout', '#', method: :get, class: 'btn btn-sm btn-info', onclick: "signOut('#{destroy_user_session_path}')") %>
        </p>
    </div>
  </div>
</div>
<% content_for :javascript_includes do %>
  <%= javascript_include_tag "login.js" %>
<% end %>
