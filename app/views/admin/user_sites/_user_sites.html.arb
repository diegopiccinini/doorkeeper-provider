
if users.count>0
  table_for users, class: 'tags-table' do
    column :name do |u|
      link_to u.name, edit_admin_user_path(u), title: 'click to edit user'
    end
    column :email
    column "Sites" do |u|
      link_to u.sites.count, admin_user_sites_edit_path + "?user_id=#{u.id}", method: :get, title: 'click to admin sites', class: 'c-button c-button--ghost-success'
    end
    column :super_login
    column :disabled
    column :expired?

  end

else
  h2 "There are not users."
end
